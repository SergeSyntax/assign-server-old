{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [ "airbnb-base", "prettier", "plugin:node/recommended" ],
    "plugins": [ "prettier" ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-process-exit": "off",
        "global-require": "off",
        "no-param-reassign": "off"
    }
}
